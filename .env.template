# ====================================================================
# TEMPLATE DE VARIÁVEIS DE AMBIENTE - VILLAGER-NG
# ====================================================================
#
# IMPORTANTE: Este é um arquivo template. Copie para .env e configure
#            com seus valores reais. NUNCA commite .env no repositório!
#
# AVISO DE SEGURANÇA: Este framework contém capacidades avançadas de
#                     pentest. Use APENAS em ambientes controlados!
# ====================================================================

# ====================================================================
# CONFIGURAÇÕES DE SERVIDOR
# ====================================================================

# Host e porta do servidor principal
VILLAGER_HOST=127.0.0.1
VILLAGER_PORT=37695

# Modo debug (APENAS em desenvolvimento)
VILLAGER_DEBUG=False

# Número de workers para produção
VILLAGER_WORKERS=1

# ====================================================================
# CONFIGURAÇÕES DE LOGGING
# ====================================================================

# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOGGING_LEVEL=INFO

# Formato das mensagens de log
LOGGING_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Arquivo de log
LOGGING_FILE=villager.log

# Tamanho máximo do arquivo de log
LOGGING_MAX_SIZE=10MB

# Número de backups de log
LOGGING_BACKUP_COUNT=5

# ====================================================================
# CONFIGURAÇÕES DE IA / LLM
# ====================================================================

# API Key do OpenAI (OBRIGATÓRIO para funcionamento)
OPENAI_API_KEY=sk-proj-your-api-key-here

# URL base da API OpenAI (deixe padrão se usar OpenAI oficial)
OPENAI_BASE_URL=https://api.openai.com/v1

# Modelo a ser usado
OPENAI_MODEL=gpt-3.5-turbo

# Temperatura para geração (0.0 a 1.0)
OPENAI_TEMPERATURE=0.95

# Máximo de tokens por resposta
OPENAI_MAX_TOKENS=2048

# Timeout para requests (segundos)
OPENAI_TIMEOUT=30

# ====================================================================
# CONFIGURAÇÕES DE MODELOS LOCAIS
# ====================================================================

# URL do servidor de LLM local
LOCAL_LLM_URL=http://localhost:8000

# Nome do modelo local
LOCAL_LLM_MODEL=hive

# Timeout para modelos locais (segundos)
LOCAL_LLM_TIMEOUT=300

# ====================================================================
# CONFIGURAÇÕES DE MODELOS ESPECIALIZADOS
# ====================================================================

# Modelo especializado para CTF
CTF_MODEL=al-1s-ctf-ver

# Modelo para reasoning avançado
REASONING_MODEL=qwq-32b

# Modelo Hive
HIVE_MODEL=hive

# ====================================================================
# CONFIGURAÇÕES MCP (Model Context Protocol)
# ====================================================================

# URL do cliente MCP
MCP_CLIENT_URL=http://127.0.0.1:25989

# Timeout para operações MCP (segundos)
MCP_TIMEOUT=14400

# Tentativas de retry
MCP_RETRY=3

# Delay entre tentativas (segundos)
MCP_RETRY_DELAY=5

# ====================================================================
# SERVIDORES MCP (CONFIGURAR CONFORME SEU AMBIENTE)
# ====================================================================

# AVISO: IPs abaixo são exemplos do código original
#        Configure com seus próprios servidores de teste

# Driver Kali Linux
KALI_DRIVER_URL=http://10.10.3.119:25989

# Browser automation
BROWSER_USE_URL=http://10.10.3.119:25990

# Console MCP
MCP_CONSOLE_URL=http://10.10.3.248:1611

# Servidor LLM remoto
LLM_SERVER_URL=http://10.10.5.2:8000

# ====================================================================
# CONFIGURAÇÕES DE REDE E PROXY
# ====================================================================

# Habilitar proxy
PROXY_ENABLED=False

# Proxy HTTP
HTTP_PROXY=

# Proxy HTTPS
HTTPS_PROXY=

# Timeouts de rede (segundos)
CONNECT_TIMEOUT=10
READ_TIMEOUT=30
TOTAL_TIMEOUT=60

# ====================================================================
# IPS DE TESTE (CONFIGURE PARA SEU AMBIENTE)
# ====================================================================

# IP para teste de conectividade
CONNECTIVITY_TEST_IP=100.64.0.41

# IP alvo para reconhecimento
RECON_TARGET_IP=100.64.0.33

# ====================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# ====================================================================

# Tempo máximo de execução (segundos)
MAX_EXECUTION_TIME=300

# Modo sandbox (SEMPRE True em produção)
SANDBOX_MODE=True

# PERIGOSO: Permitir eval() (NUNCA em produção)
ALLOW_EVAL=False

# PERIGOSO: Permitir comandos de sistema (NUNCA em produção)
ALLOW_SYSTEM_COMMANDS=False

# Auditoria
LOG_ALL_COMMANDS=True
LOG_API_CALLS=True
LOG_FILE_ACCESS=True

# ====================================================================
# CONFIGURAÇÕES DO RAG
# ====================================================================

# Caminho do banco de dados RAG
RAG_DB_PATH=scheduler/core/RAGLibrary/RAGL.sqlite

# Caminho de backup
RAG_BACKUP_PATH=backups/RAGL_backup.sqlite

# Modelo de embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Dimensões dos embeddings
EMBEDDING_DIMENSION=384

# Tamanho do batch para embeddings
EMBEDDING_BATCH_SIZE=32

# Máximo de resultados RAG
RAG_MAX_RESULTS=5

# Threshold de similaridade
RAG_SIMILARITY_THRESHOLD=0.7

# ====================================================================
# CONFIGURAÇÕES DE FERRAMENTAS
# ====================================================================

# Memória mínima necessária (MB)
MIN_MEMORY_MB=256

# Verificar câmera
CHECK_CAMERA=False

# Verificar rede
CHECK_NETWORK=True

# Caminhos de ferramentas externas
NUCLEI_PATH=/usr/bin/nuclei
NMAP_PATH=/usr/bin/nmap
MSFCONSOLE_PATH=/usr/bin/msfconsole

# ====================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ====================================================================

# Modo debug
DEBUG_MODE=False

# Reload automático
RELOAD_ON_CHANGE=False

# Profiling
ENABLE_PROFILING=False

# Mock de serviços externos
MOCK_EXTERNAL=False

# ====================================================================
# CONFIGURAÇÕES DE TESTE
# ====================================================================

# Modo de teste
TEST_MODE=False

# Ambiente isolado
ISOLATED_ENV=True

# Pular testes de rede
SKIP_NETWORK_TESTS=True

# Mock de funções perigosas
MOCK_DANGEROUS=True

# ====================================================================
# CONFIGURAÇÕES DE AMBIENTE
# ====================================================================

# Ambiente de execução (development, staging, production)
ENVIRONMENT=development